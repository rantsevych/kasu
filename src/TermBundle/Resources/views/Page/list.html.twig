<!DOCTYPE html>
<html>
{% include ('module/header.html.twig') %}
<body>
{% include ('module/mainmenu.html.twig') %}
<div class="row logo">
    <div class="col-md-6">
        <h1 class="text-left"><a href="{{ url('term_list') }}">Новини</a> </h1>
        <ul class="mini-menu">
        {% for id,row in menuLinks %}
            <li><a href="{{ row.link }}" {% if id == catId %}class="active" {% endif %}>{{ row.name }}</a></li>
        {% endfor %}
            </ul>
    </div>
</div>

<div class="block-content">
    <div class="row">
        {% for item in terms %}

            <div class="col-md-4">
                <div class="jumbotron card card-block">
                    <h2>{{ item.getTitle }}</h2>

                    <small><i>{{ item.getcreated|date('d.m.Y') }}</i></small><p>
                    <p>
                        {{item.getDescription }}
                    </p>
                    <p>
                        {% set path = path('page_view', {'id' : item.getId }) %}
                        <a class="news_read" href="{{ path }}">Детальніше...</a>
                    </p>
                </div>
            </div>


        {% endfor %}
    </div>
</div>

<div class="block-content">
    <div class="row">
        {% for item in termsAll %}

            <div class="col-md-4">
                <div class="jumbotron card card-block">
                    <h2>{{ item.getTitle }}</h2>

                    <small><i>{{ item.getcreated|date('d.m.Y') }}</i></small><p>
                    <p>
                        {{item.getDescription }}
                    </p>
                    <p>
                        {% set path = path('page_view', {'id' : item.getId }) %}
                        <a class="news_read" href="{{ path }}">Детальніше...</a>
                    </p>
                </div>
            </div>


        {% endfor %}
    </div>
</div>

{% include ('module/footer.html.twig') %}

</body>
</html>